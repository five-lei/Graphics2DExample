<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_invalidate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yilei.graphics2dexample.view.activity.InvalidateActivity">

    <com.yilei.graphics2dexample.ui.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:title_name="@string/invalidate"
        android:background="@color/tab_select_text"
        app:title_textColor="@android:color/white"
        app:title_left_text="@string/back"
        app:left_text_drawable_left="@mipmap/ic_left_light"
        android:paddingLeft="10dp">
    </com.yilei.graphics2dexample.ui.TitleView>

    <com.yilei.graphics2dexample.ui.dynamic.BallMoveView
        android:id="@+id/ball_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_clipping"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yilei.graphics2dexample.view.activity.ClippingActivity">

    <com.yilei.graphics2dexample.ui.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:title_name="@string/clip"
        android:background="@color/tab_select_text"
        app:title_textColor="@android:color/white"
        app:title_left_text="@string/back"
        app:left_text_drawable_left="@mipmap/ic_left_light"
        android:paddingLeft="10dp">
    </com.yilei.graphics2dexample.ui.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
            <RadioButton
                android:id="@+id/rb1"
                style="@style/TitleButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/flat_round_shape_left"
                android:text="@string/clip_view"
                android:checked="true"
                android:textColor="@drawable/radio_button_color"
                android:textSize="@dimen/sp_16"/>
            <RadioButton
                android:id="@+id/rb2"
                style="@style/TitleButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/flat_round_shape_right"
                android:text="@string/clip_frame"
                android:textColor="@drawable/radio_button_color"
                android:textSize="@dimen/sp_16"/>


        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dynamic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yilei.graphics2dexample.view.activity.DynamicActivity">

    <com.yilei.graphics2dexample.ui.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:title_name="@string/dynamic_state"
        android:background="@color/tab_select_text"
        app:title_textColor="@android:color/white"
        app:title_left_text="@string/back"
        app:left_text_drawable_left="@mipmap/ic_left_light"
        android:paddingLeft="10dp">
    </com.yilei.graphics2dexample.ui.TitleView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_dynamic"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
